<%- include('includes/head') %>
    <%- include('includes/nav') %>
        <div class="container">
            <div class="row">
                <div class="col lg-2">

                </div>
                <div class="col-lg-8 my-3">
                    <h1 class="text-center">Criar conta ou entrar</h1>
                    <p class="text-center lead">Faça o login ou faça sua conta abaixo</p>

                    <div class="row">

                        <div class="col-lg">
                            <h4>Faça o seu cadastro</h4>
                            <small>
                                <p>Se você ainda <span style="color: red; font-weight: bolder;">não</span> tiver conta, preencha os campos abaixo.</p>
                            </small>
                            <form accept="/login/register" method="POST">
                                <input type="hidden" name="_csrf" value="<%=csrfToken %>">
                                <div class="form-group">
                                  <label >Seu e-mail</label>
                                  <input type="email" class="form-control" name="email" placeholder="email@exemplo.com.br">
                                </div>
                                <div class="form-group">
                                  <label >Sua senha</label>
                                  <input type="password" class="form-control" name="password" placeholder="******">
                                </div>
                                <button type="submit" class="btn btn-primary">Criar conta</button>
                              </form>
                        </div>
                        <div class="col-lg">
                            <h4>Entrar no sistema</h4>
                            <small>
                                <p>Se você já tiver conta, preencha os campos abaixo e clique em entrar.</p>
                            </small>
                            <form accept="/login/login" method="POST">
                                <input type="hidden" name="_csrf" value="<%=csrfToken %>">
                                <div class="form-group">
                                  <label >Seu e-mail</label>
                                  <input type="email" class="form-control" name="email" placeholder="email@exemplo.com.br">
                                </div>
                                <div class="form-group">
                                  <label >Sua senha</label>
                                  <input type="password" class="form-control" name="password" placeholder="******">
                                </div>
                                <button type="submit" class="btn btn-primary">Entrar</button>
                              </form>
                        </div>

                    </div>
                </div>
                <div class="col lg-2">

                </div>
            </div>
        </div>

        <%- include('includes/footer'); %>